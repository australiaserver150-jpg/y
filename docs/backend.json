{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's flexible display name."
        },
        "username": {
          "type": "string",
          "description": "The user's unique, fixed username."
        },
        "profilePicture": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "onlineStatus": {
          "type": "boolean",
          "description": "Indicates if the user is currently online."
        },
        "friends": {
            "type": "array",
            "description": "An array of user IDs who are friends.",
            "items": { "type": "string" }
        },
        "friendRequests": {
            "type": "array",
            "description": "An array of user IDs who have sent a friend request.",
            "items": { "type": "string" }
        },
        "sentRequests": {
            "type": "array",
            "description": "An array of user IDs to whom a friend request has been sent.",
            "items": { "type": "string" }
        }
      },
      "required": [
        "name",
        "username"
      ]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "senderId": {
          "type": "string",
          "description": "The user ID of the message sender."
        },
        "text": {
          "type": "string",
          "description": "The text content of the message."
        },
        "imageURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of an image sent in the message."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The time the message was sent."
        }
      },
      "required": [
        "senderId",
        "timestamp"
      ]
    },
    "Chat": {
      "title": "Chat",
      "description": "Represents a conversation between users.",
      "type": "object",
      "properties": {
        "participants": {
          "type": "array",
          "description": "An array of user IDs participating in the chat.",
          "items": {
            "type": "string"
          }
        },
        "lastMessage": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Call": {
      "title": "Call",
      "description": "Represents a WebRTC call session.",
      "type": "object",
      "properties": {
        "participants": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of user IDs in the call."
        },
        "type": {
          "type": "string",
          "enum": [
            "audio",
            "video"
          ],
          "description": "The type of call."
        },
        "status": {
          "type": "string",
          "enum": [
            "ringing",
            "connected",
            "ended"
          ],
          "description": "The current status of the call."
        },
        "caller": {
          "type": "string",
          "description": "The UID of the user who initiated the call."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "endedAt": {
          "type": "string",
          "format": "date-time"
        },
        "offer": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "sdp": {
              "type": "string"
            }
          },
          "description": "WebRTC offer from the caller."
        },
        "answer": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "sdp": {
              "type": "string"
            }
          },
          "description": "WebRTC answer from the callee."
        }
      },
      "required": ["caller", "participants", "type", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/chats/{chatId}": {
      "schema": {
        "$ref": "#/entities/Chat"
      },
      "description": "Stores metadata for chat conversations."
    },
    "/chats/{chatId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/ChatMessage"
      },
      "description": "A subcollection for messages within a specific chat."
    },
    "/calls/{callId}": {
      "schema": {
        "$ref": "#/entities/Call"
      },
      "description": "Stores WebRTC call signaling data."
    },
    "/calls/{callId}/candidates/{candidateId}": {
      "schema": {
        "type": "object",
        "properties": {},
        "description": "ICE candidate for a WebRTC call."
      },
      "description": "A subcollection for ICE candidates for a specific call."
    }
  }
}
