{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's flexible display name."
        },
        "username": {
          "type": "string",
          "description": "The user's unique, fixed username."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "profilePicture": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "onlineStatus": {
          "type": "boolean",
          "description": "Indicates if the user is currently online."
        }
      },
      "required": [
        "name",
        "username",
        "email"
      ]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "senderId": {
          "type": "string",
          "description": "The user ID of the message sender."
        },
        "text": {
          "type": "string",
          "description": "The text content of the message."
        },
        "imageURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of an image sent in the message."
        },
        "type": {
          "type": "string",
          "enum": [
            "text",
            "image"
          ],
          "description": "The type of the message."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The time the message was sent."
        }
      },
      "required": [
        "senderId",
        "timestamp",
        "type"
      ]
    },
    "Chat": {
      "title": "Chat",
      "description": "Represents a conversation between users.",
      "type": "object",
      "properties": {
        "participants": {
          "type": "array",
          "description": "An array of user IDs participating in the chat.",
          "items": {
            "type": "string"
          }
        },
        "lastMessage": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "firebase-storage"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/chats/{chatId}": {
      "schema": {
        "$ref": "#/entities/Chat"
      },
      "description": "Stores metadata for chat conversations."
    },
    "/chats/{chatId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/ChatMessage"
      },
      "description": "A subcollection for messages within a specific chat."
    }
  }
}
